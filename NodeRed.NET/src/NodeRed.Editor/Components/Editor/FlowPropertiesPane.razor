@* Flow properties pane for flow/tab editing *@

<div class="red-ui-editor-pane-flow-properties">
    <div class="form-row">
        <label for="flow-name"><i class="fa fa-tag"></i> Name</label>
        <input type="text" id="flow-name" @bind="Name" @bind:event="oninput" 
               placeholder="Flow name" class="red-ui-text-input" />
    </div>

    <div class="form-row">
        <label><i class="fa fa-cog"></i> Status</label>
        <div class="status-options">
            <label class="status-option">
                <input type="radio" name="flow-status" value="enabled" 
                       checked="@(Disabled == false)" @onchange="@(() => SetDisabled(false))" />
                <span>Enabled</span>
            </label>
            <label class="status-option">
                <input type="radio" name="flow-status" value="disabled" 
                       checked="@Disabled" @onchange="@(() => SetDisabled(true))" />
                <span>Disabled</span>
            </label>
        </div>
    </div>

    <div class="form-row">
        <label><i class="fa fa-info-circle"></i> Info</label>
        <textarea @bind="Info" @bind:event="oninput" rows="5" 
                  placeholder="Optional description for this flow"
                  class="red-ui-text-input"></textarea>
    </div>

    @if (ShowEnvVars)
    {
        <div class="form-row env-section">
            <div class="env-header">
                <label><i class="fa fa-cube"></i> Environment Variables</label>
                <button class="red-ui-button red-ui-button-small" @onclick="AddEnvVar" title="Add">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
            
            <div class="env-list">
                @foreach (var env in EnvVars)
                {
                    <div class="env-row">
                        <input type="text" value="@env.Name" class="env-name" placeholder="Name"
                               @onchange="@(e => UpdateEnvName(env.Id, e.Value?.ToString() ?? ""))" />
                        <select class="env-type" value="@env.Type"
                                @onchange="@(e => UpdateEnvType(env.Id, e.Value?.ToString() ?? "str"))">
                            <option value="str">string</option>
                            <option value="num">number</option>
                            <option value="bool">boolean</option>
                            <option value="json">JSON</option>
                            <option value="env">env var</option>
                        </select>
                        <input type="text" value="@env.Value" class="env-value" placeholder="Value"
                               @onchange="@(e => UpdateEnvValue(env.Id, e.Value?.ToString() ?? ""))" />
                        <button class="red-ui-button red-ui-button-small" @onclick="@(() => RemoveEnvVar(env.Id))" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                }

                @if (EnvVars.Count == 0)
                {
                    <div class="env-empty">No environment variables defined</div>
                }
            </div>
        </div>
    }
</div>

