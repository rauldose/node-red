@code {
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public EventCallback<string> NameChanged { get; set; }
    
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public EventCallback<bool> DisabledChanged { get; set; }
    
    [Parameter] public string Info { get; set; } = "";
    [Parameter] public EventCallback<string> InfoChanged { get; set; }
    
    [Parameter] public bool ShowEnvVars { get; set; } = true;
    [Parameter] public List<FlowEnvVar> EnvVars { get; set; } = new();
    [Parameter] public EventCallback<List<FlowEnvVar>> EnvVarsChanged { get; set; }

    private async Task SetDisabled(bool value)
    {
        Disabled = value;
        await DisabledChanged.InvokeAsync(value);
    }

    private async Task AddEnvVar()
    {
        EnvVars.Add(new FlowEnvVar
        {
            Id = Guid.NewGuid().ToString("N"),
            Name = "",
            Value = "",
            Type = "str"
        });
        await EnvVarsChanged.InvokeAsync(EnvVars);
    }

    private async Task RemoveEnvVar(string id)
    {
        EnvVars.RemoveAll(e => e.Id == id);
        await EnvVarsChanged.InvokeAsync(EnvVars);
    }

    private async Task UpdateEnvName(string id, string name)
    {
        var env = EnvVars.FirstOrDefault(e => e.Id == id);
        if (env != null)
        {
            env.Name = name;
            await EnvVarsChanged.InvokeAsync(EnvVars);
        }
    }

    private async Task UpdateEnvValue(string id, string value)
    {
        var env = EnvVars.FirstOrDefault(e => e.Id == id);
        if (env != null)
        {
            env.Value = value;
            await EnvVarsChanged.InvokeAsync(EnvVars);
        }
    }

    private async Task UpdateEnvType(string id, string type)
    {
        var env = EnvVars.FirstOrDefault(e => e.Id == id);
        if (env != null)
        {
            env.Type = type;
            await EnvVarsChanged.InvokeAsync(EnvVars);
        }
    }

    public class FlowEnvVar
    {
        public string Id { get; set; } = "";
        public string Name { get; set; } = "";
        public string Value { get; set; } = "";
        public string Type { get; set; } = "str";
    }
}
