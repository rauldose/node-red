@* Node group component *@
@using NodeRed.Editor.Services

<g class="red-ui-flow-group" @onclick="OnClick">
    <rect class="red-ui-flow-group-body"
          x="0" y="0"
          width="200" height="150"
          rx="5" ry="5"
          fill="rgba(200, 200, 200, 0.5)"
          stroke="#999"
          stroke-width="1" />
    @if (!string.IsNullOrEmpty(Group.Name))
    {
        @((MarkupString)$"<text x=\"10\" y=\"20\" class=\"red-ui-flow-group-label\">{System.Net.WebUtility.HtmlEncode(Group.Name)}</text>")
    }
</g>

@code {
    [Parameter]
    public NodeGroup Group { get; set; } = null!;

    [Parameter]
    public EventCallback OnClick { get; set; }
}
