<div class="red-ui-tabs @Class">
    <ul class="red-ui-tabs-list">
        @foreach (var tab in TabItems)
        {
            <li class="red-ui-tab @(tab.Id == ActiveTab ? "active" : "") @(tab.Disabled ? "disabled" : "")"
                @onclick="() => SelectTab(tab)">
                @if (!string.IsNullOrEmpty(tab.Icon))
                {
                    <i class="fa @tab.Icon"></i>
                }
                <span class="red-ui-tab-label">@tab.Label</span>
                @if (tab.Closable && OnTabClose.HasDelegate)
                {
                    <button class="red-ui-tab-close" @onclick="() => CloseTab(tab)" @onclick:stopPropagation="true">
                        <i class="fa fa-times"></i>
                    </button>
                }
            </li>
        }
        @if (Addable && OnTabAdd.HasDelegate)
        {
            <li class="red-ui-tab red-ui-tab-add" @onclick="AddTab">
                <i class="fa fa-plus"></i>
            </li>
        }
    </ul>
    @if (ShowScrollButtons && _showScroll)
    {
        <button class="red-ui-tabs-scroll-left" @onclick="ScrollLeft">
            <i class="fa fa-chevron-left"></i>
        </button>
        <button class="red-ui-tabs-scroll-right" @onclick="ScrollRight">
            <i class="fa fa-chevron-right"></i>
        </button>
    }
</div>

