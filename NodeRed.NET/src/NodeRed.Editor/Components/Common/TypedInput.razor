<div class="red-ui-typedInput @Class">
    <button type="button" class="red-ui-typedInput-type-select" @onclick="ToggleTypeMenu">
        <span class="red-ui-typedInput-type-icon" style="background-color: @GetTypeColor();">
            @GetTypeIcon()
        </span>
        <i class="fa fa-caret-down"></i>
    </button>
    
    @if (_showTypeMenu)
    {
        <div class="red-ui-typedInput-options" @onclick:stopPropagation="true">
            @foreach (var type in Types)
            {
                <div class="red-ui-typedInput-option @(type.Value == SelectedType ? "selected" : "")"
                     @onclick="() => SelectType(type.Value)">
                    <span class="red-ui-typedInput-option-icon" style="background-color: @type.Color;">
                        @type.Label
                    </span>
                    <span class="red-ui-typedInput-option-label">@type.Label</span>
                </div>
            }
        </div>
    }
    
    <div class="red-ui-typedInput-input-wrap">
        @switch (SelectedType)
        {
            case "bool":
                <select class="red-ui-typedInput-input" @bind="Value">
                    <option value="true">true</option>
                    <option value="false">false</option>
                </select>
                break;
            case "json":
            case "jsonata":
                <textarea class="red-ui-typedInput-input" @bind="Value" rows="3"></textarea>
                break;
            case "date":
                <input type="text" class="red-ui-typedInput-input" placeholder="timestamp" @bind="Value" />
                break;
            case "bin":
                <input type="text" class="red-ui-typedInput-input" placeholder="[0,1,2,...]" @bind="Value" />
                break;
            case "env":
                <div class="red-ui-typedInput-input-group">
                    <span class="red-ui-typedInput-prefix">$</span>
                    <input type="text" class="red-ui-typedInput-input" placeholder="ENV_VAR" @bind="Value" />
                </div>
                break;
            case "flow":
            case "global":
                <div class="red-ui-typedInput-input-group">
                    <span class="red-ui-typedInput-prefix">@(SelectedType).</span>
                    <input type="text" class="red-ui-typedInput-input" placeholder="variable" @bind="Value" />
                </div>
                break;
            default:
                <input type="@GetInputType()" class="red-ui-typedInput-input" @bind="Value" placeholder="@Placeholder" />
                break;
        }
        
        @if (ShowExpandButton && (SelectedType == "json" || SelectedType == "jsonata"))
        {
            <button type="button" class="red-ui-typedInput-expand" @onclick="OnExpand">
                <i class="fa fa-expand"></i>
            </button>
        }
    </div>
</div>

