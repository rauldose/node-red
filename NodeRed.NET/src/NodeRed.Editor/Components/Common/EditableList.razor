@using Microsoft.AspNetCore.Components
@typeparam TItem

<div class="red-ui-editableList @Class">
    <div class="red-ui-editableList-header">
        @if (!string.IsNullOrEmpty(Header))
        {
            <span class="red-ui-editableList-header-text">@Header</span>
        }
        @if (Addable)
        {
            <button class="red-ui-editableList-addBtn" @onclick="AddItem">
                <i class="fa fa-plus"></i> @AddLabel
            </button>
        }
    </div>
    <div class="red-ui-editableList-container">
        <ul class="red-ui-editableList-list">
            @if (Items != null)
            {
                @foreach (var (item, index) in Items.Select((x, i) => (x, i)))
                {
                    <li class="red-ui-editableList-item" draggable="@Sortable.ToString().ToLower()"
                        @ondragstart="() => DragStart(index)"
                        @ondragover:preventDefault="true"
                        @ondrop="() => Drop(index)">
                        @if (Sortable)
                        {
                            <span class="red-ui-editableList-item-handle">
                                <i class="fa fa-bars"></i>
                            </span>
                        }
                        <div class="red-ui-editableList-item-content">
                            @ItemTemplate?.Invoke(item)
                        </div>
                        @if (Removable)
                        {
                            <button class="red-ui-editableList-item-remove" @onclick="() => RemoveItem(index)">
                                <i class="fa fa-times"></i>
                            </button>
                        }
                    </li>
                }
            }
        </ul>
        @if (Items == null || !Items.Any())
        {
            <div class="red-ui-editableList-empty">@EmptyText</div>
        }
    </div>
</div>

